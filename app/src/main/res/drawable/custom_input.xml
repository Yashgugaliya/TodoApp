</item>

    <item android:state_enabled="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/white_bg"></solid>
            <stroke android:width="1dp" android:color="@color/lightgrey"></stroke>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>